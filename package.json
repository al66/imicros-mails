{
  "name": "imicros-mails",
  "version": "0.0.1",
  "author": "Andreas Leinen <andreas.leinen@imicros.de> (www.imicros.de)",
  "license": "MIT",
  "description": "Moleculer service for sending mails via smtp and handling imap inboxes",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --no-cache",
    "test-local": "jest --coverage --no-cache --config=local.js",
    "test-template": "jest test/mail.spec.js --no-cache --config=local.js"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/*.js",
      "lib/util/*.js",
      "!lib/globals.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dev/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dev/"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/al66/imicros-mails.git"
  },
  "keywords": [
    "imicros",
    "moleculer",
    "mail",
    "inbox",
    "smtp",
    "imap"
  ],
  "devDependencies": {
    "coveralls": "^3.0.4",
    "imicros-acl": "0.0.3",
    "jest": "^24.8.0",
    "moleculer": "^0.13.9",
    "nats": "^1.3.0",
    "util": "^0.12.1"
  },
  "dependencies": {
    "imap": "^0.8.19",
    "lodash": "^4.17.13",
    "nodemailer": "^6.2.1"
  }
}
